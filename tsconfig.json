{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "types": ["node"],
    "module": "preserve",
    "noEmit": true,
    "declaration": true,
    "lib": ["es2022"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
