{
  "name": "@better-call/root",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "turbo --filter \"./packages/*\" test --continue",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix --unsafe",
    "format": "biome format --write",
    "typecheck": "tsc --build",
    "release": "turbo --filter \"./packages/*\" build && bumpp && pnpm -r publish --access public --no-git-checks",
    "release:no-build": "bumpp && pnpm -r publish --access public --no-git-checks --tag next",
    "bump": "bumpp",
    "build": "turbo --filter \"./packages/*\" build",
    "dev": "turbo --filter \"./packages/*\" dev",
    "clean": "turbo --filter \"./packages/*\" clean && rm -rf node_modules",
    "serve": "turbo --filter \"./example\" serve"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@biomejs/biome": "^2.2.7",
    "@types/express": "^5.0.3",
    "@types/set-cookie-parser": "^2.4.10",
    "@types/supertest": "^6.0.3",
    "arktype": "^2.1.23",
    "body-parser": "^2.2.0",
    "bumpp": "^9.11.1",
    "express": "^5.1.0",
    "supertest": "^7.1.4",
    "tsdown": "^0.15.7",
    "type-fest": "^4.23.0",
    "typescript": "^5.6.0-beta",
    "valibot": "1.0.0-beta.15",
    "vitest": "^3.1.1",
    "zod": "^4.0.1"
  },
  "dependencies": {
    "@better-auth/utils": "^0.3.0",
    "@better-fetch/fetch": "^1.1.4",
    "rou3": "^0.5.1",
    "set-cookie-parser": "^2.7.1"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./node": {
      "import": {
        "types": "./dist/node.d.ts",
        "default": "./dist/node.js"
      },
      "require": {
        "types": "./dist/node.d.cts",
        "default": "./dist/node.cjs"
      }
    }
  },
  "files": [
    "dist"
  ]
}
